<%= form_for(userinput, :remote => true) do |f| %>
  <% if userinput.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(userinput.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% userinput.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.number_field :age , :value => 20, :min =>15  %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :semester %><br />
    <%= f.number_field :semester %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :extra_phone %><br />
    <%= f.text_field :extra_phone %>
  </div>
  <div class="field">
    <%= f.label :twitter %><br />
    <%= f.text_field :twitter %>
  </div>
  <div class="field">
    <%= f.label :linkedin %><br />
    <%= f.text_field :linkedin %>
  </div>
  <div class="field">
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :motivation %><br />
    <%= f.number_field :motivation , :value => 8, :min =>0  %>
  </div>
  <div class="field">
    <%= f.label :faculty_id %><br />
    <%= f.collection_select(:faculty_id, Faculty.all, :id, :name ) %>
  </div>  
  <div class="field">
    <%= f.label :user_profile_id %><br />
    <%= f.collection_select(:user_profile_id, UserProfile.all, :id, :description ) %>
  </div>
  <%= f.hidden_field :create_from , :value => 'user_form'  %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>