

<% users.each do |user| %>

<!--Start vcard wrapper-->
         <div class="vcard-freebie">
            <!--Start content-wrapper-front-->
            <div class="content-wrapper-front">
               <div class="header">
                  <span class="nombre"><%= user.name %></span>
                  <span class="perfil"><%= user.user_profile.description %></span>
                  <div class="underline"></div>
               </div>
               <div class="avatar">
                    <%= image_tag user.photo.url, :style => 'width:120px;height:120px;' %>
               </div>
                <div class="datos">
                  <div id="text"><strong>Edad: </strong><%= user.age %></div>
                  <!--<div id="text"><strong>Dirección: </strong><%= user.address %></div>-->
                  <div id="text"><strong>Email: </strong><%= user.email %></div>
                  <div id="text"><strong>Telefono: </strong><%= user.phone %></div>
                  <div id="text"><strong>Twitter: </strong><%= user.twitter %></div>
                </div>

                <div style="clear:both;"></div>
                  <div style="float:left;margin-left: 7px;font-weight: 500;font-size: 14px;color: #7B8F9F;text-shadow: 0px 1px white;"><strong>Facultad: </strong><%= user.faculty.name %></div>
                  <div style="float:right;font-weight: 500;font-size: 14px;color: #7B8F9F;text-shadow: 0px 1px white;"><strong>Semestre: </strong><%= user.semester %></div>

               <div style="clear:both;"></div>
               <span style="float:left;margin-left: 7px;font-weight: 500;font-size: 14px;color: #7B8F9F;text-shadow: 0px 1px white;"><strong>Motivación: </strong><%= user.motivation %></span>
               <span style="float:right;">
                <!--<%= link_to 'Show', user %>-->
                <%= link_to 'Editar', edit_user_path(user) %>                
                <%= link_to 'Eliminar', user, confirm: '¿Estas seguro de Eliminar a este colaborador?', method: :delete %>
               </span>
            </div>
            <!--End content-wrapper-front -->
         </div>
          <!--End vcard wrapper-->
<% end %>

