<div id="page">
  <% if flash[:alert] %>
    <p class="flash-error"><center style="color:red"><%= flash[:alert] %></center></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>
  <%= yield %>
</div>
 <div id="banner-wrapper" style="margin-top:-30px;">
 <div id="login" class="box">
 	<div class= "h1login">
 		<h1>Entrar</h1>
 		<!--<h5>Acceso exclusivo a coordinadores</h5>-->
 	</div>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <fieldset id="inputs">
    <%= f.email_field :email, :autofocus => true, :class => 'inputs ico username',:placeholder => "Correo Electrónico", :required => "required" %>
    <%= f.password_field :password , :class => 'inputs ico password',:placeholder => "Contraseña", :required => "required", :title => "Acceso solo a Jueces" %>
  </fieldset>

   <!--<% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> <%= f.label 'Recordar'%>
  <% end %>-->

  <fieldset id="actions">
  	<%= f.submit "Acceder",:class => 'button loginb',:style => 'top: -20px; position: relative; width: 355px;' %>
  </fieldset>
<% end %>

<fieldset id="actions">
  <%= button_to "Registrate", new_registration_path(resource_name), :method => "get",:class => 'button loginb',:style => 'top: -30px; position: relative; width: 355px;'  %>
</fieldset>

</div>
</div>
