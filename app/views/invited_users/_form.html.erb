<%= form_for(@invited_user) do |f| %>
  <% if @invited_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invited_user.errors.count, "error") %> Error al modificar</h2>

      <ul>
      <% @invited_user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
