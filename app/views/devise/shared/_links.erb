<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= button_to "Registrate", new_registration_path(resource_name), :method => "get",:class => 'button loginb',:style => 'left: 238px;
position: relative; top: -15px;'  %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Con Facebook", omniauth_authorize_path(resource_name, provider), :class => 'button-f',:style =>'background: url(http://www.zaporeak-sabores.com/wp-content/uploads/2015/01/facebook_icon_relleno.png) no-repeat scroll 0 0 #3b5998;
    background-position: -8px -10px; background-size: 70px;',:onMouseOver=>"this.style.cssText='color: #3b5998'" ,:onMouseOut=>"this.style.cssText='color: white', this.style.background='url(http://www.zaporeak-sabores.com/wp-content/uploads/2015/01/facebook_icon_relleno.png) no-repeat scroll 0 0 #3b5998',this.style.backgroundSize='70px',this.style.backgroundPosition='-8px -10px'" %>
  <% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "¿Has olvidado tu contraseña?", new_password_path(resource_name), :style => 'font-size: 20px; margin-right: 127px; margin-top: 3%; font-family: aileron light;' %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>


<% end -%>