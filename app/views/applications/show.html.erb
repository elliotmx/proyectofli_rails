<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @application.name %>
</p>

<p>
  <b>Short description:</b>
  <%= @application.short_description %>
</p>

<% if @application.users.all.count > 0 %>
	<%= render :partial => 'users/showappmembers', :locals => {:users => @application.users.all} %>
<% else %>
	<p> no tienes Colaboradores aun </p>
<% end %>
<input type="button" onclick="$('#formNewUser').show()" value="Agrega Colaborador">

<div style="display:none" id="formNewUser">
	<%= render :partial => 'users/form_embed', :locals => {:userinput  => 	User.new} %>
</div>

<%= render :partial => 'answers/form', :locals => {:questionsIn => Question.all} %>

<%= link_to 'Editar', edit_application_path(@application) %> |
