<% @u = User.where("user_profile_id = ? and college_id = ?",2,3) %>
Proyectos Totales COBAQ : <%= @u.count %>

<% @u.each do |lider_proyecto| %>
	<% @ap = lider_proyecto.applications %>

	<%if @ap.empty? %>
		
	<% else %>
	<% @app_obj = @ap.first %>
			<div id="proyectos">
					<table style="width:100%;">
						<tr>
							<th>Proyecto</th>
							<th>Categoria</th>
							<th>Descripción</th>
						</tr>
					<tr ALIGN=CENTER>
						<td><%= @app_obj.name %></td>
					<td><%= @app_obj.market.description%></td>						
					<td><%= @app_obj.short_description %></td> 
						</tr>
						<tr>
						<td colspan=4 style="font-size: 10px; color: rgb(41, 138, 202); text-align: center; font-weight: bold;"> 
						<% @app_obj.users.each do |usr| %>
							<%= usr.name %> \
						<% end %>
						<td>
						</tr>
						<tr>
							<td>
							<% if PdfPreview.find_by_application_id(@app_obj.id).nil? %>
								<p style="color:red">(incompleto) No generó PDF</p>
							<% else %>
							    <td colspan=4><center><%= link_to "Descargar(PDF)", application_path(@app_obj, :format => 'pdf'),:class=>"inputs inputContacto",:target =>"_blank" %><center><td>
							<% end %>
							<td>
						</tr>
					</table>
			</div>
	<% end %>
<% end %>